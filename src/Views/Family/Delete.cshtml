@model todo.Models.Family

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete a To-Do Item</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Parents.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Children.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address.State)
            @Html.DisplayFor(model => model.Address.County)
            @Html.DisplayFor(model => model.Address.City)
        </dd>
        <dt>
            @Html.CheckBoxFor(model => model.IsRegistered)
        </dt>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
